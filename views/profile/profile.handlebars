<div id="profileContainer">
   <div id="historyPlayDiv">
      <label>
      	historyPlay:
         {{#each user.historyPlay}}
            <div>
               <form class = "commentForm" id="{{this}}" method="POST" action="/comments">
                  <p>{{this}}</p>
                  <label>Comment:</label>
                  <textarea cols="5" rows="20" class="comment" name="comment"></textarea>
                  <lable>Rating:</lable>
                  <select class="rating" name = "rating">
                    <option value ="1">1</option>
                    <option value ="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
                  <input type="text"  class="moviename" name="moviename" value="{{this}}" hidden>
                  <input type="text"  name="userName" value="{{../user.userName}}" hidden>
                  <button type="submit">Add a comment</button>
               </form>
            </div>
         {{/each}}
      </label>
   </div>
   <div id="commentsDiv">
      <label>
         Your Comments:
         {{#each commentsList}}
            <div style="border: 1px solid black; width: 400px">
               <label>Movie:</label>
               <p>{{this.movieName}}</p>
               <label>Content:</label>
               <p>{{this.content}}</p>
               <label>Rating:</label>
               <p>{{this.rating}}</p>
            </div>
         {{/each}}
      </label>
   </div>
</div>
