<div id="profileContainer">
   <div id="historyPlayDiv">
      <label>
      	HistoryPlay:
         {{#each user.historyPlay}}
            <div>
               <form class = "commentForm" id="{{this}}" method="POST" action="/comments">
                  <p>{{this.movieName}}</p>
                  <label>Comment:</label>
                  <textarea cols="5" rows="20" class="comment" name="comment"></textarea>
                  <lable>Rating(0-10):</lable>
                  <input type="number" name="rating" maxlength="2"  onkeyup="this.value=this.value.replace(/\D/g,'')"

onafterpaste="this.value=this.value.replace(/\D/g,'')" max='10' min='0' step="0.1">
                  <input type="text"  class="moviename" name="moviename" value="{{this.movieName}}" hidden>
                  <input type="text"  name="userName" value="{{../user.userName}}" hidden>
                  <button type="submit">Add a comment</button>
               </form>
            </div>
         {{/each}}
      </label>
   </div>
   <div id="commentsDiv">
      <label>
         Your Comments:
         {{#each commentsList}}
            <div style="border: 1px solid black; width: 400px">
               <label>Movie:</label>
               <p>{{this.movieName}}</p>
               <label>Content:</label>
               <p>{{this.content}}</p>
               <label>Rating:</label>
               <p>{{this.rating}}</p>
            </div>
         {{/each}}
      </label>
   </div>
</div>
